<div class="row">
  <div class="col-md-3">
    <div class="well">
      <p class="text-center">
        {{#link-to 'user' this}}<img {{bind-attr src=avatar_url}} style="width:140px"/>{{/link-to}}
      </p>

      <h4>{{#link-to 'user' this}}{{name}}{{/link-to}}</h4>

      <p>
        {{#if company}}
          {{company}}<br/>
        {{/if}}

        {{#if location}}
          {{location}}<br/>
        {{/if}}

        {{#if email}}
          <a {{bind-attr href=mailto}}>{{email}}</a><br/>
        {{/if}}
      </p>

      <table class="table">
        <tr>
          <td>Followers:</td>
          <td>{{followers}}</td>
        </tr>
        <tr>
          <td>Repositories:</td>
          <td>{{public_repos}}</td>
        </tr>
        <tr>
          <td>Gists:</td>
          <td>{{public_gists}}</td>
        </tr>
      </table>
      <p>
        {{#link-to 'index'}}Back{{/link-to}}
      </p>
      <hr/>
    </div>
  </div>

  <div class="col-md-8">
    {{outlet}}
  </div>
</div>
