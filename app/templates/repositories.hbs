<ol class="breadcrumb">
  <li>{{#link-to 'index'}}Devs{{/link-to}}</li>
  <li>{{#link-to 'user' user}}{{user.name}}{{/link-to}}</li>
  <li>Repositories</li>
</ol>

<h3>Repositories</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each}}
    <tr>
      <td>{{#link-to 'repository' name}}{{name}}{{/link-to}}</td>
      <td><small>{{description}}</small></td>
    </tr>
    {{/each}}
  </tbody>
</table>
